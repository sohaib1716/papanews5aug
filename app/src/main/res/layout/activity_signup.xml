                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/lstextcolorinv"
                    android:textColorHint="@color/lstextcolorinv"
                    android:visibility="gone"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutUsername">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_security_24"
                        android:fontFamily="@font/lato"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/lstextcolor"
                        android:textColorHint="@color/lstextcolor"
                        tools:targetApi="jelly_bean" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinputnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/lstextcolor"
                    android:textColorHint="@color/lstextcolor"
                    android:visibility="visible"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPassword">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                        android:drawableRight="@drawable/ic_baseline_local_phone_24"
                        android:fontFamily="@font/lato"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/lstextcolor"
                        android:textColorHint="@color/lstextcolor"
                        tools:targetApi="jelly_bean" />
                </com.google.android.material.textfield.TextInputLayout>

