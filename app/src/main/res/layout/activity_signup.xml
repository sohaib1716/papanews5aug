                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinputOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/lstextcolor"
                    android:textColorHint="@color/lstextcolor"
                    android:visibility="gone"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutUsername">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/getotp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                        android:drawableRight="@drawable/ic_baseline_local_phone_24"
                        android:fontFamily="@font/lato"
                        android:hint="OTP"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/lstextcolorinv"
                        android:textColorHint="@color/lstextcolorinv"
                        tools:targetApi="jelly_bean" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/lstextcolorinv"
                    android:textColorHint="@color/lstextcolorinv"
                    android:visibility="gone"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/genderselect">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_location_on_24"
                        android:drawableRight="@drawable/ic_baseline_location_on_24"
                        android:fontFamily="@font/lato"
                        android:hint="Location"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/lstextcolorinv"
                        android:textColorHint="@color/lstextcolorinv"
                        tools:targetApi="jelly_bean" />
                </com.google.android.material.textfield.TextInputLayout>


                <Spinner
                    android:id="@+id/textinputLocation"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Location"
                    android:background="@drawable/edback"
                    android:drawableEnd="@drawable/ic_baseline_location_on_24"
                    android:drawableRight="@drawable/ic_baseline_location_on_24"
                    android:entries="@array/statename"
                    android:padding="18dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/genderselect"
                    tools:ignore="MissingConstraints" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/lstextcolorinv"
                    android:textColorHint="@color/lstextcolorinv"
                    android:visibility="gone"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textinputLocation">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profession"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_person_24"
                        android:drawableRight="@drawable/ic_baseline_person_24"
                        android:fontFamily="@font/lato"
                        android:hint="Profession"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/lstextcolorinv"
                        android:textColorHint="@color/lstextcolorinv"
                        tools:targetApi="jelly_bean" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/professionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato"
                    android:text="Profession"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/date_picker_select"
                    tools:ignore="HardcodedText,MissingConstraints" />


                <Spinner
                    android:id="@+id/textinputProfession"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Location"
                    android:background="@drawable/edback"
                    android:entries="@array/profession"
                    android:padding="18dp"
                    android:popupBackground="#E63C3C3C"
                    android:theme="@style/mySpinnerItemStyle"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/professionText"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gendertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:text="Gender"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/textinputnumber"
                    tools:ignore="HardcodedText,MissingConstraints" />

                <View
                    android:id="@+id/jk"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:background="#cfcfcf"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/gendertext"
                    tools:ignore="MissingConstraints" />


                <RadioGroup
                    android:id="@+id/genderselect"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/jk"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#AF6671"
                        android:buttonTint="#fff"
                        android:checked="true"
                        android:fontFamily="@font/lato"
                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Male"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        tools:ignore="OnClick" />


                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#AF6671"
                        android:buttonTint="#fff"
                        android:fontFamily="@font/lato"
                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Female"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        tools:ignore="OnClick" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:buttonTint="#fff"
                        android:fontFamily="@font/lato"
                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Other"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        tools:ignore="OnClick" />


                </RadioGroup>

                <!--                app:layout_constraintTop_toBottomOf="@+id/genderselect"-->

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:text="Date of birth"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/genderselect"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/jkk"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:background="#cfcfcf"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/date_picker_select"
                    tools:ignore="MissingConstraints" />


                <DatePicker
                    android:id="@+id/date_picker_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:theme="@style/MyDatePicker"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dab"
                    tools:ignore="MissingConstraints" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/jkk">

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edback"
                        android:drawableEnd="@drawable/ic_baseline_date_range_24"
                        android:drawableRight="@drawable/ic_baseline_date_range_24"
                        android:ems="10"
                        android:fontFamily="@font/lato"
                        android:hint="Date of Birth"
                        android:padding="20dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editText1"
                        android:text="Get Date"
                        android:visibility="gone" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button1"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <ProgressBar
